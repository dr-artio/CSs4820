<Window x:Class="Example4.AnotherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example4"
        mc:Ignorable="d"
        Title="AnotherWindow" Height="119.6" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Are you sure want to close?" HorizontalAlignment="Stretch" Margin="0,10,-0.4,0" VerticalAlignment="Top" Height="26"/>
        <Button x:Name="button_yes" Content="Yes" HorizontalAlignment="Left" Margin="96,12.8,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Height="20" Click="Button_yes_OnClick"/>
        <Button x:Name="button_no" Content="No" HorizontalAlignment="Left" Margin="193,12.8,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Height="20" Click="Button_no_OnClick"/>

    </Grid>
</Window>
