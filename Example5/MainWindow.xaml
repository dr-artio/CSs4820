<Window x:Class="Example51.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="clr-namespace:Example5"
        mc:Ignorable="d"
        Title="Put it in order" Height="500" Width="525" KeyDown="MainWindow_OnKeyDown">
    <Window.DataContext>
        <mvvm:ViewModel x:Name="ViewModel" PropertyChanged="ViewModel_OnPropertyChanged"/>
    </Window.DataContext>
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Game" x:Name="gameMenu">
                <MenuItem Header="Start" Click="ShufflePane"></MenuItem>
                <MenuItem Header="Reset" Click="ResetPane"></MenuItem>
                <MenuItem Header="Exit" Click="MenuItem_OnClick"></MenuItem>
            </MenuItem>
        </Menu>
        <UniformGrid Name="Pane"></UniformGrid>
    </DockPanel>
</Window>
